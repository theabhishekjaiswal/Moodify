<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#075E64" /> <!-- Dark teal for pressed state -->
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#0A9BA6" /> <!-- Teal for default state -->
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>
